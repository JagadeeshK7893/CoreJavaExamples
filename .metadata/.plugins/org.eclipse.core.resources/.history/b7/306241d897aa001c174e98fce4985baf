package cj1;
import java.util.Scanner;

public class WhileLoop {
	
   
   int n;
   public WhileLoop(int n)
   {
	  this.n=n;
   }
	public void Palindrome()
	{
		
		int sum=0;
		int rem;
		int temp=n;
		while(temp>0) {
			rem=temp%10;
			sum=sum*10+rem;
			temp=temp/10;
		}
		if(n==sum)
		{
			System.out.println(n+".. is a palindrome number");
		}
		else
		{
			System.out.println(n+"..is not a palindrome");
		}
	}

	
}
